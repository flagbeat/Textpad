<com.google.android.material.chip.Chip
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tag_chip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="@style/chipTextappearance"
    android:fontFamily="sans-serif-medium"
    android:theme="@style/ChipTheme"
    app:chipIcon="@drawable/ic_hastag_26px"
    app:iconStartPadding="@dimen/margin_less"
    app:chipIconTint="@color/primary"
    app:chipIconSize="18dp"
    app:chipStrokeWidth="1dp"
    app:chipIconEnabled="true"
    app:chipIconVisible="true"
    android:layout_margin="0dp"
    app:checkedIconEnabled="true"
    app:chipStrokeColor="@color/primary_dark"
    app:checkedIcon="@drawable/ic_hastag_26px"
    app:chipBackgroundColor="@drawable/chip_bg_states"
    android:textColor="@drawable/chip_text_color"
    android:text="FlagTag"
    style="@style/Widget.MaterialComponents.Chip.Filter" />